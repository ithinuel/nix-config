{
    "coc.preferences.formatOnSave": true,
    "cSpell.userWords": [
        "Coresight",
        "REUSEADDR",
        "chans",
        "cmpid"
    ],
    "languageserver": {
        "nix": {
            "command": "nixd",
            "filetypes": [
                "nix"
            ],
            "settings": {
                "nixd": {
                    "formatting": {
                        "command": [
                            "nixpkgs-fmt"
                        ]
                    }
                }
            }
        }
    },
    "markdownlint.config": {
        "MD013": {
            "line_length": 100,
            "code_blocks": false
        }
    },
    "python.formatting.provider": "ruff",
    "rust-analyzer.procMacro.enable": true
}
